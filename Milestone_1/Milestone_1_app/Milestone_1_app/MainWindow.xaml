<Window x:Class="Milestone_1_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone_1_app"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Label x:Name="state_label" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,39,0,0" FontSize="14"/>
        <Label x:Name="city_label" Content="City" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,39,0,0" FontSize="14"/>
        <ComboBox x:Name="state_list" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="81,70,0,0" SelectionChanged="state_list_SelectionChanged"/>
        <DataGrid x:Name="bussiness_grid" HorizontalAlignment="Center" Height="270" VerticalAlignment="Top" Width="465" Margin="10,139,0,0" SelectionChanged="bussiness_grid_SelectionChanged"/>
        <ComboBox x:Name="city_list" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="383,70,0,0" SelectionChanged="city_list_SelectionChanged"/>

    </Grid>
</Window>
